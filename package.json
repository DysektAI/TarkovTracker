{
  "private": true,
  "name": "tarkov-tracker-monorepo",
  "workspaces": [
    "functions",
    "frontend"
  ],
  "scripts": {
    "frontend": "npm run dev --workspace=frontend",
    "build": "npm run build --workspaces",
    "build:functions": "npm run build --workspace=functions",
    "build:frontend": "npm run build --workspace=frontend",
    "emulators:start": "firebase emulators:start --only auth,functions,firestore,database,hosting",
    "emulators:local": "firebase emulators:start --import=./local_data --export-on-exit",
    "dev": "concurrently \"npm:frontend\" \"npm:emulators:local\"",
    "deps": "taze --interactive",
    "deps:all": "npm run deps && npm run deps --workspaces --if-present"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.15.2",
    "concurrently": "^9.1.2",
    "firebase-tools": "^14.2.1",
    "taze": "^19.0.4"
  }
}
